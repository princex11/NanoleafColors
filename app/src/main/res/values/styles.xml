<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:button"> @style/Widget.AppCompat.Button </item>
        <item name="android:radius">5dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/corners</item>
        <item name="android:layout_margin">8dp</item>
        <item name="textAppearanceButton"> @style/TextAppearance.AppCompat.Caption</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>